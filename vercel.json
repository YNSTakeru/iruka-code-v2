{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "API_URL": "@NEXT_PUBLIC_API_URL"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "${API_URL}/$1",
      "methods": ["POST"],
      "headers": {
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ]
}
